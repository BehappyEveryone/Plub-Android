<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.plub.presentation.ui.sign.signup.authentication.bottomSheet.AgainAskNumberBottomSheetViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <include
            android:id="@+id/include_header"
            layout="@layout/include_dialog_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_confirm_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/include_header"
            android:layout_marginStart="16dp"
            android:text="@string/text_confirm_authentication"
            android:textAppearance="@style/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_view_phone_number"
            app:layout_constraintTop_toBottomOf="@id/text_view_confirm_title"
            app:layout_constraintStart_toStartOf="@id/text_view_confirm_title"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/heading1"
            android:text="@{vm.uiState.phoneNumber}"
            android:textColor="@color/color_5f5ff9"
            tools:text="010-9039-8927"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_agree"
            app:layout_constraintTop_toBottomOf="@id/text_view_phone_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="0dp"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/image_view_arrow_under"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_arrow_under_363636"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/text_authentication_agree"
                android:layout_marginStart="4dp"
                android:textAppearance="@style/body1"
                app:layout_constraintStart_toEndOf="@id/image_view_arrow_under"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:checked="@{vm.uiState.checked}"
                app:onThrottleClick="@{()->vm.onClickCheckBox()}"
                android:button="@drawable/selector_check"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button_wrong_number"
            android:text="@string/text_wrong_number"
            android:textColor="@color/color_8c8c8c"
            android:textAppearance="@style/heading6"
            android:background="@drawable/bg_rectangle_filled_f2f3f4_radius_8"
            android:layout_marginHorizontal="16dp"
            app:onThrottleClick="@{()->vm.onClickCloseButton()}"
            app:layout_constraintTop_toBottomOf="@id/constraint_layout_agree"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_send_authentication_number"
            android:layout_width="0dp"
            android:layout_height="48dp"/>

        <Button
            android:id="@+id/button_send_authentication_number"
            android:text="@string/text_send_again_authentication"
            android:textColor="@drawable/selector_color_8c8c8c_to_white"
            android:textAppearance="@style/heading6"
            android:background="@drawable/selector_bg_f2f3f4_to5f5ff9"
            android:layout_marginHorizontal="16dp"
            android:enabled="@{vm.uiState.checked}"
            app:onThrottleClick="@{()->vm.onClickSendButton()}"
            app:layout_constraintTop_toBottomOf="@id/constraint_layout_agree"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/button_wrong_number"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="48dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>